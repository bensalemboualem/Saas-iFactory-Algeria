# IAFactory Academy - Production Environment Variables

# ============================================
# üîê SECURITY KEYS
# ============================================
SECRET_KEY=YOUR_SECRET_KEY
JWT_SECRET=YOUR_JWT_SECRET
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# ============================================
# üóÑÔ∏è  DATABASE
# ============================================
POSTGRES_PASSWORD=YOUR_POSTGRES_PASSWORD
DATABASE_URL=postgresql://iafactory:YOUR_POSTGRES_PASSWORD@db:5432/iafactory

# ============================================
# üöÄ APPLICATION
# ============================================
ENVIRONMENT=production
DEBUG=false
CORS_ORIGINS=http://localhost:3100,https://yourdomain.com,https://www.yourdomain.com

# ============================================
# üîó API KEYS & INTEGRATIONS
# ============================================

# Stripe (Payment Processing)
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLIC_KEY=pk_live_YOUR_STRIPE_PUBLIC_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET

# SendGrid (Email Service)
SENDGRID_API_KEY=SG.YOUR_SENDGRID_API_KEY
SENDGRID_FROM_EMAIL=noreply@yourdomain.com
SENDGRID_FROM_NAME=IAFactory Academy

# AWS S3 (File Storage & Backups)
AWS_ACCESS_KEY_ID=YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=YOUR_AWS_SECRET_KEY
AWS_S3_BUCKET=iafactory-academy
AWS_REGION=eu-west-1

# Sentry (Error Tracking)
SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/YOUR_PROJECT_ID
SENTRY_ENVIRONMENT=production
SENTRY_RELEASE=1.0.0

# ============================================
# üìß EMAIL CONFIGURATION
# ============================================
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USER=apikey
SMTP_PASSWORD=${SENDGRID_API_KEY}

# ============================================
# üåê DOMAIN & SSL
# ============================================
DOMAIN=yourdomain.com
DOMAIN_NAME=yourdomain.com
SSL_CERTIFICATE=/etc/letsencrypt/live/yourdomain.com/fullchain.pem
SSL_KEY=/etc/letsencrypt/live/yourdomain.com/privkey.pem

# ============================================
# üìä ANALYTICS & MONITORING
# ============================================
GOOGLE_ANALYTICS_ID=G_YOUR_TRACKING_ID
LOG_LEVEL=INFO
LOG_FILE=/var/log/iafactory/app.log

# ============================================
# üí≥ PAYMENT CONFIGURATION
# ============================================
PAYMENT_CURRENCY=CHF
PAYMENT_TAX_RATE=0.077  # 7.7% for Switzerland
PAYMENT_MIN_AMOUNT=10
PAYMENT_MAX_AMOUNT=99999

# ============================================
# üéì COURSE CONFIGURATION
# ============================================
MAX_UPLOAD_SIZE=500000000  # 500MB
ALLOWED_VIDEO_FORMATS=mp4,mov,avi,mkv
ALLOWED_DOCUMENT_FORMATS=pdf,docx,xlsx,pptx
MAX_COURSES_PER_INSTRUCTOR=unlimited
AUTO_APPROVE_COURSES=false

# ============================================
# üîî NOTIFICATIONS
# ============================================
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
NOTIFICATION_BATCH_SIZE=100
NOTIFICATION_BATCH_TIME=3600

# ============================================
# üõ°Ô∏è  SECURITY
# ============================================
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
ENABLE_IP_BLOCKING=true
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# ============================================
# üì± SOCIAL INTEGRATIONS
# ============================================
GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GITHUB_CLIENT_ID=YOUR_GITHUB_CLIENT_ID
GITHUB_CLIENT_SECRET=YOUR_GITHUB_CLIENT_SECRET
FACEBOOK_CLIENT_ID=YOUR_FACEBOOK_CLIENT_ID
FACEBOOK_CLIENT_SECRET=YOUR_FACEBOOK_CLIENT_SECRET

# ============================================
# üåç LOCALIZATION
# ============================================
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,fr,ar
DEFAULT_TIMEZONE=UTC
DATE_FORMAT=YYYY-MM-DD
TIME_FORMAT=HH:MM:SS

# ============================================
# üíæ BACKUP & MAINTENANCE
# ============================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # 2:00 AM daily
BACKUP_RETENTION_DAYS=30
MAINTENANCE_WINDOW=23:00-23:30  # UTC

# ============================================
# üöÄ PERFORMANCE TUNING
# ============================================
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=40
REDIS_MAX_CONNECTIONS=10
API_WORKERS=4
API_THREADS=2
API_TIMEOUT=30
CACHE_TTL=3600

# ============================================
# üìö DOCUMENTATION
# ============================================
SWAGGER_ENABLED=true
SWAGGER_URL=/docs
REDOC_ENABLED=true
REDOC_URL=/redoc

# ============================================
# üêõ DEBUGGING (Production: set to false)
# ============================================
DEBUG=false
VERBOSE_LOGGING=false
SQL_ECHO=false
