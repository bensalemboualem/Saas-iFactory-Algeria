# Application
APP_NAME="IAFactory Academy"
ENVIRONMENT=development
DEBUG=True
SECRET_KEY=your-super-secret-key-change-in-production-min-32-chars
API_VERSION=v1
API_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Database
DATABASE_URL=postgresql://academy_user:academy_password_dev@localhost:5434/iafactory_academy_db
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=0
DB_ECHO=False

# Redis
REDIS_URL=redis://localhost:6381/0
REDIS_CACHE_DB=0
REDIS_SESSION_DB=1

# Celery
CELERY_BROKER_URL=redis://localhost:6381/1
CELERY_RESULT_BACKEND=redis://localhost:6381/2
CELERY_TASK_ALWAYS_EAGER=False

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production-min-32-chars
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# Password Hashing
BCRYPT_ROUNDS=12

# CORS
CORS_ORIGINS=["http://localhost:3100","http://localhost:5173"]
CORS_ALLOW_CREDENTIALS=True
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Stripe Payment
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=chf
STRIPE_SUCCESS_URL=http://localhost:3100/payment/success
STRIPE_CANCEL_URL=http://localhost:3100/payment/cancel

# SendGrid Email
SENDGRID_API_KEY=SG.your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@iafactory.ch
SENDGRID_FROM_NAME="IAFactory Academy"
SENDGRID_TEMPLATE_WELCOME=d-your_template_id
SENDGRID_TEMPLATE_RESET_PASSWORD=d-your_template_id
SENDGRID_TEMPLATE_ENROLLMENT=d-your_template_id
SENDGRID_TEMPLATE_CERTIFICATE=d-your_template_id

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=iafactory-academy-assets
AWS_S3_URL=https://iafactory-academy-assets.s3.eu-central-1.amazonaws.com
AWS_CLOUDFRONT_URL=https://your-cloudfront-domain.cloudfront.net

# File Upload
MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
ALLOWED_VIDEO_EXTENSIONS=mp4,mov,avi,mkv
ALLOWED_DOCUMENT_EXTENSIONS=pdf,doc,docx,ppt,pptx
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,gif,webp

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# Sentry Monitoring (Optional)
SENTRY_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# Admin User (for initial setup)
ADMIN_EMAIL=admin@iafactory.ch
ADMIN_PASSWORD=ChangeThisPassword123!
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Cache TTL (seconds)
CACHE_USER_TTL=300
CACHE_COURSE_TTL=3600
CACHE_LESSON_TTL=1800
