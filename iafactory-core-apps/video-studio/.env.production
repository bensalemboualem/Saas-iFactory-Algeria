# ============================================
# IAFACTORY VIDEO STUDIO PRO - PRODUCTION
# ============================================
# ⚠️  REMPLACER TOUTES LES VALEURS CI-DESSOUS

# === APIs IA (OBLIGATOIRE) ===
FAL_KEY=fal_VOTRE_CLE_ICI
REPLICATE_API_TOKEN=r8_VOTRE_TOKEN_ICI
ELEVENLABS_API_KEY=sk_VOTRE_CLE_ICI

# === Database (NE PAS MODIFIER si vous utilisez Docker) ===
DATABASE_URL=postgresql+asyncpg://postgres:postgres@db:5433/iafactory_video
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=iafactory_video

# === Redis (NE PAS MODIFIER si vous utilisez Docker) ===
REDIS_URL=redis://redis:6380

# === Auth & Security (GÉNÉRER DES SECRETS FORTS) ===
# Générer avec: openssl rand -base64 32
JWT_SECRET=GENERER_AVEC_OPENSSL_RAND_BASE64_32
NEXTAUTH_SECRET=GENERER_AVEC_OPENSSL_RAND_BASE64_32
NEXTAUTH_URL=https://video-studio.iafactory.ch

# === Cloudflare R2 Storage (OBLIGATOIRE) ===
S3_BUCKET=iafactory-videos
S3_ACCESS_KEY=VOTRE_ACCESS_KEY_R2
S3_SECRET_KEY=VOTRE_SECRET_KEY_R2
S3_ENDPOINT=https://VOTRE_ACCOUNT_ID.r2.cloudflarestorage.com
S3_REGION=auto

# === Stripe Payment (OBLIGATOIRE pour les paiements) ===
STRIPE_PUBLISHABLE_KEY=pk_live_VOTRE_CLE_PUBLIQUE
STRIPE_SECRET_KEY=sk_live_VOTRE_CLE_SECRETE
STRIPE_WEBHOOK_SECRET=whsec_VOTRE_WEBHOOK_SECRET

# === URLs Frontend/Backend ===
FRONTEND_URL=https://video-studio.iafactory.ch
NEXT_PUBLIC_API_URL=https://api.iafactory.ch

# === Application Config ===
APP_NAME=IAFactory Video Studio Pro
APP_VERSION=1.0.0
ENVIRONMENT=production
DEBUG=false

# === CORS Origins (ajouter vos domaines) ===
CORS_ORIGINS=["https://video-studio.iafactory.ch","https://www.iafactory.ch"]

# === Rate Limiting ===
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# === IAF-Tokens Pricing (en centimes d'euros) ===
TOKEN_COST_VIDEO_GENERATION=100
TOKEN_COST_AUDIO_GENERATION=20
TOKEN_COST_SCRIPT_GENERATION=10

# === Monitoring (optionnel) ===
SENTRY_DSN=
SENTRY_ENVIRONMENT=production

# === Logs ===
LOG_LEVEL=INFO
