  "common_issues": [
    {
      "id": "interface_english",
      "problem": "Interface en anglais",
      "symptoms": [
        "Menu en anglais",
        "Modules en anglais",
        "Dashboard en anglais"
      ],
      "solutions": [
        "Se déconnecter et se reconnecter",
        "Recharger avec Ctrl+Shift+R",
        "Exécuter: set_default_language.php",
        "Nettoyer les caches"
      ]
    },
    {
      "id": "wrong_counters",
      "problem": "Compteurs incorrects",
      "symptoms": [
        "Affichage de 804 au lieu de 4"
      ],
      "solutions": [
        "Nettoyer les caches",
        "Recharger la page",
        "Vérifier la base de données"
      ]
    },
    {
      "id": "text_direction",
      "problem": "Direction du texte incorrecte",
      "symptoms": [
        "Texte de gauche à droite",
        "Texte arabe mal aligné"
      ],
      "solutions": [
        "Vérifier RTL: VERIFICATION_FINALE_ARABE.php",
        "Réinitialiser: set_default_language.php"
      ]
    },
    {
      "id": "partial_translation",
      "problem": "Modules partiellement traduits",
      "symptoms": [
        "Certains éléments en anglais"
      ],
      "solutions": [
        "Exécuter: maintenance/traduire_tous_modules.php",
        "Nettoyer les caches",
        "Se déconnecter et se reconnecter"
      ]
    },
    {
      "id": "cache_not_cleared",
      "problem": "Caches non nettoyés",
      "symptoms": [
        "Changements non visibles",
        "Ancienne interface"
      ],
      "solutions": [
        "Exécuter: CLEAR_ALL_CACHES_FINAL.php",
        "Se déconnecter et se reconnecter",
        "Recharger avec Ctrl+Shift+R"
      ]
    }
  ],

  "scripts": {
    "essential": [
      {
        "name": "CLEAR_ALL_CACHES_FINAL.php",
        "description": "Nettoie tous les caches",
        "usage": "Après chaque modification",
        "command": "\"C:/xampp/php/php.exe\" CLEAR_ALL_CACHES_FINAL.php"
      },
      {
        "name": "VERIFICATION_FINALE_ARABE.php",
        "description": "Vérifie la configuration arabe",
        "usage": "Diagnostic",
        "command": "\"C:/xampp/php/php.exe\" VERIFICATION_FINALE_ARABE.php"
      },
      {
        "name": "set_default_language.php",
        "description": "Réinitialise la langue par défaut",
        "usage": "Si langue incorrecte",
        "command": "\"C:/xampp/php/php.exe\" set_default_language.php"
      }
    ],
    "maintenance": [
      {
        "name": "scanner_modules_anglais.php",
        "description": "Scan les modules pour l'anglais",
        "usage": "Vérification",
        "command": "\"C:/xampp/php/php.exe\" maintenance/scanner_modules_anglais.php"
      },
      {
        "name": "traduire_tous_modules.php",
        "description": "Traduit tous les modules en arabe",
        "usage": "Retraduction",
        "command": "\"C:/xampp/php/php.exe\" maintenance/traduire_tous_modules.php"
      },
      {
        "name": "activer_francais.php",
        "description": "Active/traduit le français",
        "usage": "Configuration français",
        "command": "\"C:/xampp/php/php.exe\" maintenance/activer_francais.php"
      }
    ]
  },

