# =============================================================================
# IAFactory Video Platform - Environment Variables
# =============================================================================
# Copy this file to .env and fill in the values
# =============================================================================

# === APPLICATION ===
APP_NAME="IAFactory Video Platform"
APP_VERSION="1.0.0"
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=change-me-in-production-use-secrets-generate

# === API ===
API_V1_PREFIX=/api/v1
ALLOWED_ORIGINS=http://localhost:3120,http://localhost:5173

# === DATABASE ===
DATABASE_URL=postgresql://iafactory:password@localhost:5436/video_platform
REDIS_URL=redis://localhost:6383/0

# === STORAGE ===
STORAGE_PROVIDER=local
STORAGE_PATH=./storage
# For S3/R2/MinIO:
# S3_BUCKET=my-bucket
# S3_ACCESS_KEY=your-access-key
# S3_SECRET_KEY=your-secret-key
# S3_REGION=auto
# S3_ENDPOINT=https://your-endpoint.com

# === LLM PROVIDERS ===
# OpenAI
OPENAI_API_KEY=sk-VOTRE-CLE-ICI
OPENAI_MODEL=gpt-4-turbo-preview

# Anthropic
ANTHROPIC_API_KEY=sk-VOTRE-CLE-ICI
ANTHROPIC_MODEL=claude-3-opus-20240229

# Groq (Free tier available)
GROQ_API_KEY=gsk_your-groq-key
GROQ_MODEL=llama-3.3-70b-versatile

# DeepSeek
DEEPSEEK_API_KEY=sk-VOTRE-CLE-ICI
DEEPSEEK_MODEL=deepseek-chat

# Google
GOOGLE_API_KEY=your-google-key
GOOGLE_MODEL=gemini-pro

# Mistral
MISTRAL_API_KEY=your-mistral-key
MISTRAL_MODEL=mistral-large-latest

# Default LLM to use
DEFAULT_LLM_PROVIDER=groq

# === IMAGE GENERATION ===
# Stability AI (Stable Diffusion)
STABILITY_API_KEY=sk-VOTRE-CLE-ICI

# Leonardo AI
LEONARDO_API_KEY=your-leonardo-key

# Replicate (Flux, SDXL)
REPLICATE_API_TOKEN=r8_your-replicate-token

# Ideogram
IDEOGRAM_API_KEY=your-ideogram-key

# FAL AI
FAL_KEY=your-fal-key

DEFAULT_IMAGE_PROVIDER=dalle

# === VIDEO GENERATION ===
# Runway ML
RUNWAY_API_KEY=your-runway-key

# Pika Labs
PIKA_API_KEY=your-pika-key

# Luma AI
LUMA_API_KEY=your-luma-key

# Kling AI
KLING_API_KEY=your-kling-key

DEFAULT_VIDEO_PROVIDER=runway

# === AVATAR GENERATION ===
# HeyGen
HEYGEN_API_KEY=your-heygen-key

# D-ID
DID_API_KEY=your-did-key

# Synthesia
SYNTHESIA_API_KEY=your-synthesia-key

DEFAULT_AVATAR_PROVIDER=heygen

# === AUDIO/VOICE ===
# ElevenLabs
ELEVENLABS_API_KEY=your-elevenlabs-key

DEFAULT_TTS_PROVIDER=elevenlabs
DEFAULT_STT_PROVIDER=whisper

# === MUSIC GENERATION ===
# Suno AI
SUNO_API_KEY=your-suno-key

# Udio
UDIO_API_KEY=your-udio-key

# === SOCIAL PLATFORMS ===
# YouTube
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-client-secret

# TikTok
TIKTOK_CLIENT_KEY=your-tiktok-key
TIKTOK_CLIENT_SECRET=your-tiktok-secret

# Instagram (Meta Business)
INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-app-secret

# LinkedIn
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Twitter/X
TWITTER_API_KEY=your-twitter-key
TWITTER_API_SECRET=your-twitter-secret

# Facebook
FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# === PROCESSING ===
MAX_VIDEO_DURATION_SECONDS=600
MAX_UPLOAD_SIZE_MB=500
FFMPEG_PATH=ffmpeg

# === QUEUE ===
CELERY_BROKER_URL=redis://localhost:6383/1
CELERY_RESULT_BACKEND=redis://localhost:6383/2
