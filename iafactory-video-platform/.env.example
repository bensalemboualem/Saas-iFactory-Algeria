# =============================================================================
# IAFactory Video Platform - Environment Variables
# =============================================================================
# Copy to .env and fill in the values
# =============================================================================

# === INFRASTRUCTURE ===
POSTGRES_USER=iafactory
POSTGRES_PASSWORD=your-secure-postgres-password
POSTGRES_DB=video_platform

REDIS_PASSWORD=your-secure-redis-password

MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=your-secure-minio-password

# === MONITORING ===
GRAFANA_USER=admin
GRAFANA_PASSWORD=your-secure-grafana-password
GRAFANA_URL=http://localhost:3002

FLOWER_USER=admin
FLOWER_PASSWORD=your-secure-flower-password

# === API CONFIGURATION ===
API_URL=http://localhost:8240
SECRET_KEY=your-super-secret-key-change-in-production

# === LLM PROVIDERS ===
# At minimum, configure ONE of these:
GROQ_API_KEY=gsk_your-groq-key          # Free tier available
OPENAI_API_KEY=sk-VOTRE-CLE-ICI
ANTHROPIC_API_KEY=sk-VOTRE-CLE-ICI
DEEPSEEK_API_KEY=sk-VOTRE-CLE-ICI
MISTRAL_API_KEY=your-mistral-key
GOOGLE_API_KEY=your-google-key

# === IMAGE GENERATION ===
# DALL-E uses OPENAI_API_KEY
STABILITY_API_KEY=sk-VOTRE-CLE-ICI
LEONARDO_API_KEY=your-leonardo-key
REPLICATE_API_TOKEN=r8_your-replicate-token
IDEOGRAM_API_KEY=your-ideogram-key
FAL_KEY=your-fal-key

# === VIDEO GENERATION ===
RUNWAY_API_KEY=your-runway-key
PIKA_API_KEY=your-pika-key
LUMA_API_KEY=your-luma-key
KLING_API_KEY=your-kling-key

# === AVATAR GENERATION ===
HEYGEN_API_KEY=your-heygen-key
DID_API_KEY=your-did-key
SYNTHESIA_API_KEY=your-synthesia-key

# === AUDIO ===
ELEVENLABS_API_KEY=your-elevenlabs-key
SUNO_API_KEY=your-suno-key
UDIO_API_KEY=your-udio-key

# === SOCIAL PLATFORMS (OAuth) ===
YOUTUBE_CLIENT_ID=your-youtube-client-id
YOUTUBE_CLIENT_SECRET=your-youtube-secret

TIKTOK_CLIENT_KEY=your-tiktok-key
TIKTOK_CLIENT_SECRET=your-tiktok-secret

INSTAGRAM_APP_ID=your-instagram-app-id
INSTAGRAM_APP_SECRET=your-instagram-secret

LINKEDIN_CLIENT_ID=your-linkedin-id
LINKEDIN_CLIENT_SECRET=your-linkedin-secret

TWITTER_API_KEY=your-twitter-key
TWITTER_API_SECRET=your-twitter-secret

FACEBOOK_APP_ID=your-facebook-id
FACEBOOK_APP_SECRET=your-facebook-secret
