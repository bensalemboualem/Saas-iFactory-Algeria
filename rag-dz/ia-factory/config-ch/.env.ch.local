# ==============================================

# ==============================================
# Securite (GENERER DE NOUVELLES CLES EN PROD!)
# ==============================================
API_SECRET_KEY=change-me-in-production-ch-secure-key-2024
JWT_SECRET_KEY=change-me-in-production-ch-jwt-secret-2024
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ==============================================
# Database Configuration (CH)
# ==============================================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=iafch2024secure
POSTGRES_DB=iafactory_ch

# ==============================================
# LLM Provider (Groq = gratuit et rapide)
# ==============================================
LLM_PROVIDER=groq
LLM_MODEL=llama-3.3-70b-versatile
ENABLE_LLM=true

# ==============================================
# API Keys - AI Providers
# ==============================================
# IMPORTANT: Remplacer par vos propres cles pour la production CH

# Groq (Provider principal - gratuit)
GROQ_API_KEY=

# OpenAI (Fallback)
OPENAI_API_KEY=

# Anthropic
ANTHROPIC_API_KEY=

# DeepSeek
DEEPSEEK_API_KEY=

# Google Gemini
GOOGLE_GENERATIVE_AI_API_KEY=

# ==============================================
# Frontend Configuration (CH)
# ==============================================
VITE_API_URL=http://localhost:9000
VITE_WS_URL=ws://localhost:9000/ws
VITE_SOVEREIGNTY_REGION=CH

# ==============================================
# Feature Flags
# ==============================================
ENABLE_CORS=true
ENABLE_METRICS=true
ENABLE_API_KEY_AUTH=true
ENABLE_RATE_LIMITING=true

# ==============================================
# Rate Limiting (Production CH - plus restrictif)
# ==============================================
RATE_LIMIT_PER_MINUTE=30
RATE_LIMIT_PER_HOUR=500

# ==============================================
# Embeddings & Reranking (Multilingue FR/DE/IT/EN)
# ==============================================
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2
EMBEDDING_DEVICE=cpu
EMBEDDING_BATCH_SIZE=32
USE_RERANKING=true
RERANKING_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
RERANKING_TOP_K=10
USE_PGVECTOR=true

# ==============================================
# CORS Origins (CH)
# ==============================================
ALLOWED_ORIGINS=http://localhost:4000,https://app.iafactory.ch,https://iafactory.ch

# ==============================================
# Monitoring
# ==============================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=change-me-in-production
LOG_LEVEL=INFO
ENVIRONMENT=production

# ==============================================
# n8n Workflow Automation
# ==============================================
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=change-me-in-production
N8N_WEBHOOK_URL=https://n8n.iafactory.ch
N8N_HOST=n8n.iafactory.ch

# ==============================================
# Conformite LPD-CH / RGPD
# ==============================================
DATA_RETENTION_DAYS=365
GDPR_COMPLIANT=true
LPD_CH_COMPLIANT=true
