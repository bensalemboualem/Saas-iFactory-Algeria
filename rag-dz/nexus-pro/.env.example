# ============================================================
# NEXUS AI PLATFORM - CONFIGURATION
# ============================================================
# Copiez ce fichier vers .env et remplissez les valeurs
# cp .env.example .env
# ============================================================

# ============ PORTS ============
META_PORT=8100
BMAD_PORT=8052
ARCHON_SERVER_PORT=8181
ARCHON_MCP_PORT=8051
ARCHON_UI_PORT=3737
BOLT_PORT=5173

# ============ DATABASE (Supabase) ============
# Créez un projet sur https://supabase.com
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your-service-key-here

# ============ LLM PROVIDERS ============
# OpenAI - https://platform.openai.com
OPENAI_API_KEY=sk-VOTRE-CLE-ICI

# Anthropic - https://console.anthropic.com
ANTHROPIC_API_KEY=sk-VOTRE-CLE-ICI

# DeepSeek - https://platform.deepseek.com (économique)
DEEPSEEK_API_KEY=xxx

# Groq - https://console.groq.com (rapide)
GROQ_API_KEY=gsk_xxx

# Google - https://aistudio.google.com
GEMINI_API_KEY=xxx

# ============ ALGERIA - PAIEMENT ============
# Chargily - https://chargily.com
CHARGILY_API_KEY=xxx
CHARGILY_SECRET_KEY=xxx

# ============ DEPLOYMENT (Optionnel) ============
NETLIFY_TOKEN=xxx
VERCEL_TOKEN=xxx

# ============ MONITORING (Optionnel) ============
SENTRY_DSN=xxx

# ============ FEATURE FLAGS ============
ENABLE_GOV_AGENTS=true
ENABLE_DARIJA=true
ENABLE_VIDEO_GENERATION=false

# ============ QUOTAS ============
DAILY_BUDGET_USD=50
OPENAI_DAILY_LIMIT=100
ANTHROPIC_DAILY_LIMIT=50
