# Server Configuration
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
API_BASE_URL=http://localhost:3001

# Database
DATABASE_URL="postgresql://iafactory:password@localhost:5432/iafactory_gateway?schema=public"

# Redis (Rate Limiting & Cache)
REDIS_URL="redis://localhost:6379"

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET="your-secret-key-change-in-production"

# Provider API Keys (Server-side only, NEVER expose to client)
GROQ_API_KEY="gsk_..."
OPENROUTER_API_KEY="sk-VOTRE-CLE-ICI..."
DEEPSEEK_API_KEY="sk-..."
OPENAI_API_KEY="sk-..."

# Provider Base URLs
GROQ_BASE_URL="https://api.groq.com/openai/v1"
OPENROUTER_BASE_URL="https://openrouter.ai/api/v1"
DEEPSEEK_BASE_URL="https://api.deepseek.com/v1"

# OpenRouter Configuration
OPENROUTER_APP_NAME="IAFactory Gateway"
